      <!--
            GlobalVariables is a REQUIRED section in ODM markup
        -->
<GlobalVariables>
<StudyName>Patient Questionnaire</StudyName>
<StudyDescription>This file contains patient questionnaire</StudyDescription>
<ProtocolName>P_Q_1</ProtocolName>
</GlobalVariables>

   

      <!--
            Internal ODM markup required metadata
        -->
        
<MetaDataVersion OID="v1.0.0" Name="MetaDataVersion_v1.0.0">
         
<Protocol>
<StudyEventRef StudyEventOID="SE_Questionnaire0" OrderNumber="1" Mandatory="Yes" />
</Protocol>

<StudyEventDef OID="SE_Questionnaire0" Name="Visit1" Repeating="Yes" Type="Scheduled">
<FormRef FormOID="FORM.ONE" OrderNumber="1" Mandatory="No" />
</StudyEventDef>
         
<FormDef OID="FORM.ONE" Name="First Form" Repeating="Yes">
<ItemGroupRef ItemGroupOID="IG.ONE"  OrderNumber="1" Mandatory="No" />
</FormDef>

         <!--
               Columns defined in the table
           -->
   
<ItemGroupDef OID="IG.ONE" Repeating="Yes"
   Name="ItemData Extension"
  
   Comment="First Question">
<ItemRef ItemOID="ID.Question1"   OrderNumber="1" Mandatory="No" />
<ItemRef ItemOID="ID.Question2"   OrderNumber="2" Mandatory="No" /> 
</ItemGroupDef>

         <!--
               Column attributes as defined in the table

           -->
   
<ItemDef OID="ID.Question1.radioBut"    Name="Question1"  DataType="string" Comment="radio">
<Question>
<TranslatedText xml:lang="de">Hatten Sie in der letzten Woche deutliche Atemnot?</TranslatedText>
</Question>
<CodeListRef CodeListOID = "Q1"/> 
</ItemDef>
<ItemDef OID="ID.Question2.radioBut"    Name="Question2"  DataType="string" Comment="radio" >
<Question>
<TranslatedText xml:lang="de">  Wie stark fühlen Sie sich dadurch belastet?</TranslatedText>
</Question>
<CodeListRef CodeListOID = "Q2"/> 
</ItemDef>


<CodeList OID="Q1"  Name="Question1" DataType="text">
<CodeListItem CodedValue="Ja">
<Decode> 
  <TranslatedText xml:lang="de">Ja</TranslatedText>
</Decode>
</CodeListItem>
   
   <CodeListItem CodedValue="Nein">
<Decode> 
  <TranslatedText xml:lang="de">Nein</TranslatedText>
</Decode>
</CodeListItem>
</CodeList>
 
 
<CodeList OID="Q2"   Name="Question2" DataType="integer">
